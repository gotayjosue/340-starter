<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<table>
  <thead>
    <tr>
      <th>Classification Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% classifications.forEach(function (item) { %>
      <tr>
        <td><%= item.classification_name %></td>
        <td><a href="/inv/edit-classification/<%= item.classification_id %>">Update</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>