<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<!-- Error displayer -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- HTML constructor -->

<% if (locals.accountData.account_type === "Client") { %>
  <div class="accountManagement">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in</p>
    <a href="/accountUpdate">Account Update</a>
  </div>

<%  } else { %>
  <div class="accountManagement">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in</p>
    <a href="/accountUpdate">Account Update</a>
    <h3>Inventory Management</h3>
    <a href="/inv/">Inventory Management View</a>
  </div>
<%  } %>